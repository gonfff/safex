# SafeX Configuration
# Copy this file to .env and adjust values as needed

# Server Configuration
SAFEX_API_ADDR=:8000
SAFEX_ENVIRONMENT=production

# Rate Limiting
SAFEX_RATE_LIMIT_PER_MINUTE=10

# Payload Limits
SAFEX_MAX_PAYLOAD_MB=10

# TTL Configuration
SAFEX_DEFAULT_TTL_MINUTES=15

# Blob Storage Backend ("local" or "s3")
SAFEX_BLOB_BACKEND=local

# Local Blob Storage
SAFEX_BLOB_DIR=./.storage/blobs

# S3 Configuration (required if SAFEX_BLOB_BACKEND=s3)
# SAFEX_S3_BUCKET=your-bucket-name
# SAFEX_S3_ENDPOINT=https://s3.amazonaws.com
# SAFEX_S3_ACCESS_KEY=your-access-key
# SAFEX_S3_SECRET_KEY=your-secret-key
# SAFEX_S3_REGION=us-east-1

# Metadata Backend ("bbolt" or "redis")
SAFEX_METADATA_BACKEND=bbolt

# BoltDB Configuration (required if SAFEX_METADATA_BACKEND=bbolt)
SAFEX_BBOLT_PATH=./.storage/metadata.db

# Redis Configuration (required if SAFEX_METADATA_BACKEND=redis)
# SAFEX_REDIS_ADDR=localhost:6379
# SAFEX_REDIS_PASSWORD=
# SAFEX_REDIS_DB=0

# OPAQUE Authentication
SAFEX_OPAQUE_SERVER_ID=safex
SAFEX_OPAQUE_SESSION_TTL_SECONDS=60
# SAFEX_OPAQUE_PRIVATE_KEY=base64-encoded-32-byte-key
# SAFEX_OPAQUE_OPRF_SEED=base64-encoded-64-byte-seed
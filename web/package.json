{
  "name": "safex-web",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "sync-vendor": "mkdir -p ../backend/web/static/vendor && cp ./node_modules/htmx.org/dist/htmx.min.js ../backend/web/static/vendor/",
    "build": "npm run sync-vendor && tailwindcss -i ./src/app.css -o ../backend/web/static/app.css --minify",
    "dev": "npm run sync-vendor && tailwindcss -i ./src/app.css -o ../backend/web/static/app.css --watch"
  },
  "devDependencies": {
    "daisyui": "^5.4.7",
    "htmx.org": "^2.0.8",
    "tailwindcss": "^4.1"
  }
}
